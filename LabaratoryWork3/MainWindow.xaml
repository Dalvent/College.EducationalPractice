<Window x:Class="LabaratoryWork3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabaratoryWork3"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid x:Name="root">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="stopButton" Content="Stop" Click="stopButton_Click" Width="130" Height="30" Margin="10" />
            <Button x:Name="settingsButton" Click="settingsButton_Click" Content="Настроить" Width="130" Height="30" Margin="10" />
            <Button x:Name="openTask2Button" Click="openTask2Button_Click" Content="Задание 2" Foreground="DarkBlue" Width="130" Height="30" Margin="10" />
            <Button x:Name="openTask3Button" Click="openTask3Button_Click" Content="Задание 3" Foreground="Crimson" Width="130" Height="30" Margin="10" />
       
        </StackPanel>
        <Canvas x:Name="renderPanel" Grid.Row="1" Margin="10" Background="Black">

        </Canvas>
    </Grid>
</Window>

<Window x:Class="LabaratoryWork3.SettingsScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabaratoryWork3"
        mc:Ignorable="d"
        Title="SettingsScreen" Height="300" Width="300">
    <StackPanel>
        <TextBlock Text="Настройки" FontSize="26px" Margin="8"/>
        <TextBlock Text="Размер" FontSize="14px" Margin="4"/>
        <Slider x:Name="sizeSlider" Minimum="0" Maximum="5" Margin="15, 4" ValueChanged="Slider_ValueChanged"/>
        <TextBlock Text="Цвет" FontSize="14px" Margin="4"/>
        <Button Content="Изменить" Margin="15, 4" Name="changeColorButton" Click="changeColorButton_Click"/>
    </StackPanel>
</Window>
